# Protect main from accidental commits.
BRANCH=`git rev-parse --abbrev-ref HEAD`

PROTECTED_BRANCHES="^(main)"

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]
then
  echo "\nðŸš« Commit directly to $BRANCH branch is not allowed! \n" && exit 1
fi

